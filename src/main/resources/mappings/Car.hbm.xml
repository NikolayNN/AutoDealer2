<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="my.project.autodealer.model.Car" table="car" schema="public" catalog="AutoDealer">
        <id name="id">
            <column name="id" sql-type="integer"/>
            <generator class="increment" />
        </id>
        <one-to-one name="makerInfo" class="my.project.autodealer.model.MakerInfo"
                    cascade="all" lazy="false" fetch="select"></one-to-one>
        <one-to-one name="ownerInfo" class="my.project.autodealer.model.OwnerInfo"
                    cascade="all" lazy="false" fetch="select"></one-to-one>
    </class>
</hibernate-mapping>