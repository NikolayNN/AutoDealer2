<class name="my.project.autodealer.dao.AdvertRepository" table="advert" schema="public" catalog="AutoDealer">
    <id name="id">
        <column name="id" sql-type="integer"/>
    </id>
    <many-to-one name="car" column="car_id"
                 class="my.project.autodealer.dao.CarRepository" not-null="true" cascade="save-update"/>
    <property name="createdDate">
        <column name="created_date" sql-type="integer"/>
    </property>

    <many-to-one name="users" column="users_id"
                 class="my.project.autodealer.dao.UsersRepository" not-null="true" cascade="save-update"/>

    <many-to-one name="status" column="status_id"
                 class="my.project.autodealer.dao.RefStatusRepository" not-null="true" cascade="save-update"/>
</class>