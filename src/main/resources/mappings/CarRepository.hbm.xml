<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="my.project.autodealer.dao.repositories.CarRepository" table="car" schema="public" catalog="AutoDealer">
        <id name="id">
            <column name="id" sql-type="integer"/>
            <generator class="increment" />
        </id>
        <one-to-one name="makerinfo" class="my.project.autodealer.dao.repositories.MakerInfoRepository"
                    cascade="all" lazy="false" fetch="select"></one-to-one>
        <one-to-one name="ownerinfo" class="my.project.autodealer.dao.repositories.OwnerInfoRepository"
                   cascade="all" lazy="false" fetch="select"></one-to-one>
    </class>
</hibernate-mapping>